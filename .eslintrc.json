{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": "off",
        "@typescript-eslint/indent": "off"
    },
    "ignorePatterns": ["build/*"],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
